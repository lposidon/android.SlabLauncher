<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/SlabLauncher.SearchResult.InstantAnswer.Card">
    <io.posidon.android.slablauncher.ui.view.SeeThroughView
        android:id="@+id/blur_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.18"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <io.posidon.android.slablauncher.ui.view.ColorPaletteTestView
            android:id="@+id/palette_view_0"
            android:layout_width="match_parent"
            android:layout_height="64dp"/>
        <io.posidon.android.slablauncher.ui.view.ColorPaletteTestView
            android:id="@+id/palette_view_1"
            android:layout_width="match_parent"
            android:layout_height="64dp"/>
        <io.posidon.android.slablauncher.ui.view.ColorPaletteTestView
            android:id="@+id/palette_view_2"
            android:layout_width="match_parent"
            android:layout_height="64dp"/>
        <io.posidon.android.slablauncher.ui.view.ColorPaletteTestView
            android:id="@+id/palette_view_3"
            android:layout_width="match_parent"
            android:layout_height="64dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>