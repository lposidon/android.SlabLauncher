<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dash"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        style="@style/SlabLauncher.TileArea.Item.Container"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top">
        <io.posidon.android.slablauncher.util.view.SeeThroughView
            android:id="@+id/dash_blur_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/SlabLauncher.Statement"
                android:id="@+id/statement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextClock
                style="@style/SlabLauncher.Date"
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:format24Hour="d MMMM, cccc"
                android:format12Hour="d MMMM, cccc"/>
            <View
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/notification_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/primary_notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    style="@style/SlabLauncher.Notification.Item.Container">
                    <LinearLayout
                        style="@style/SlabLauncher.Notification.Item.Source.Container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <ImageView
                            style="@style/SlabLauncher.Notification.Item.Source.Icon"
                            android:id="@+id/icon"/>
                        <TextView
                            style="@style/SlabLauncher.Notification.Item.Source.Text"
                            android:id="@+id/source"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                        style="@style/SlabLauncher.Notification.PrimaryItem.Title"
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <androidx.cardview.widget.CardView
                        style="@style/SlabLauncher.Notification.PrimaryItem.ImageCard"
                        android:id="@+id/notification_image_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            style="@style/SlabLauncher.Notification.PrimaryItem.Image"
                            android:id="@+id/notification_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        style="@style/SlabLauncher.Notification.PrimaryItem.Text"
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:id="@+id/separator1"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                        style="@style/SlabLauncher.Notification.Recycler"
                        android:id="@+id/notifications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        style="@style/SlabLauncher.Notification.XMoreText"
                        android:id="@+id/x_more"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/separator2"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <include layout="@layout/media_player"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/suggestions_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>