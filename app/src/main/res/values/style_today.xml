<resources>
    <style name="SlabLauncher.Title" parent="SlabLauncher">
        <item name="android:textSize">36sp</item>
        <item name="android:gravity">start</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingTop">32dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SlabLauncher.Today.ItemCard" parent="SlabLauncher">
        <item name="cardCornerRadius">@dimen/today_card_radius</item>

        <item name="android:layout_margin">@dimen/item_card_margin</item>
        <item name="android:elevation">@dimen/item_card_elevation</item>
    </style>
</resources>