<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SlabLauncher.TileArea.Item.Container" parent="SlabLauncher">
        <item name="cardCornerRadius">@dimen/item_card_radius</item>
        <item name="android:layout_margin">@dimen/item_card_margin</item>
        <item name="cardElevation">@dimen/item_card_elevation</item>
    </style>

    <style name="SlabLauncher.TileArea.Item.Icon" parent="SlabLauncher">
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="SlabLauncher.TileArea.Item.Mark" parent="SlabLauncher">
        <item name="android:textSize">56sp</item>
    </style>

    <style name="SlabLauncher.TileArea.Item.LabelContainer" parent="SlabLauncher">
        <item name="android:padding">8dp</item>
    </style>

    <style name="SlabLauncher.TileArea.Item.LabelText" parent="SlabLauncher">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="SlabLauncher.TileArea.Suggestions.Item.Card" parent="SlabLauncher">
        <item name="android:background">@drawable/round_bg</item>
        <item name="android:layout_marginVertical">@dimen/suggestion_margin</item>
        <item name="android:layout_marginEnd">@dimen/suggestion_margin</item>
    </style>

    <style name="SlabLauncher.TileArea.Suggestions.Item.Icon" parent="SlabLauncher">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="SlabLauncher.TileArea.Suggestions.Item.Label" parent="SlabLauncher">
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>