<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SlabLauncher.Today.SuggestionCard" parent="SlabLauncher">
        <item name="cardCornerRadius">@dimen/suggestion_card_radius</item>

        <item name="android:layout_margin">@dimen/item_card_margin</item>
        <item name="android:elevation">@dimen/item_card_elevation</item>
    </style>

    <style name="SlabLauncher.Today.SuggestionCard.Recycler" parent="SlabLauncher">
        <item name="android:layout_margin">@dimen/item_card_margin</item>
    </style>

    <style name="SlabLauncher.Suggestions.Item.Icon" parent="SlabLauncher">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">@dimen/suggestion_height</item>
        <item name="android:layout_height">@dimen/suggestion_height</item>
    </style>

    <style name="SlabLauncher.Suggestions.Item.Label" parent="SlabLauncher">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">-2dp</item>
    </style>
</resources>