<resources>
    <style name="SlabLauncher.MediaPlayer.Container" parent="SlabLauncher">
        <item name="android:padding">@dimen/feed_card_padding</item>
    </style>

    <style name="SlabLauncher.MediaPlayer.Title" parent="SlabLauncher">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SlabLauncher.MediaPlayer.Subtitle" parent="SlabLauncher">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">@dimen/feed_card_spacing</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>